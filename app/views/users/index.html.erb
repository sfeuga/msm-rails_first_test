<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Billing name</th>
      <th>Address</th>
      <th>Zip code</th>
      <th>City</th>
      <th>Primary phone number</th>
      <th>Secondary phone number</th>
      <th>Email</th>
      <th>Emergency contact name</th>
      <th>Emergency phone number</th>
      <th>Signup date</th>
      <th>Professor?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.billing_name %></td>
        <td><%= user.address %></td>
        <td><%= user.zip_code %></td>
        <td><%= user.city %></td>
        <td><%= user.primary_phone_number %></td>
        <td><%= user.secondary_phone_number %></td>
        <td><%= user.email %></td>
        <td><%= user.emergency_contact_name %></td>
        <td><%= user.emergency_phone_number %></td>
        <td><%= user.signup_date %></td>
        <td><%= user.professor? %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

